        <Grid Grid.Column="0"
              Tap="Emoji_Tap"
              Hold="Emoji_Hold"
              ManipulationStarted="Emoji_ManipulationStarted"
              ManipulationDelta="Emoji_ManipulationDelta"
              ManipulationCompleted="Emoji_ManipulationCompleted">
            <Rectangle>
                <Rectangle.Fill>
                    <ImageBrush Stretch="None"
                                AlignmentX="Left"
                                AlignmentY="Top">
                        <ImageBrush.Transform>
                            <CompositeTransform />
                        </ImageBrush.Transform>
                    </ImageBrush>
                </Rectangle.Fill>
